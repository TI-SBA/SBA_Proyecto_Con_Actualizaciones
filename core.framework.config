;########################################################################################
;	Archivo de configuración de sitio (core.framework.config)
;	copiar este archivo en la raíz del sitio
;	editar los valores según su configuración de base de datos, url y plantilla
;########################################################################################
[application]
controllers-path = "components/$1/controllers/$2"
models-path = "components/$1/models/$2"
views-path = "components/$1/views/$2"
dataobjects-path = "components/$1/models/objects/$2"
libraries-path = libraries
debug-mode = "off | application | session"
default-controller = ci/index
[datastore]
driver = mongo
server = localhost
port = 27017
database = beneficencia
[session]
mode = "off | application | session"
storage = Datastore
storage-table = erp_ac_sess
[template]
name = kunanui